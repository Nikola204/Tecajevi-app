<!DOCTYPE html>
<html lang="hr">
<head>
  <meta charset="UTF-8">
  <title>Korisnici</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-4">
    <h1 class="mb-4">Korisnici</h1>

    <form action="/users/add" method="POST" class="row g-2 mb-4">
      <div class="col-md-2">
        <input type="text" name="first_name" class="form-control" placeholder="Ime" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="last_name" class="form-control" placeholder="Prezime" required>
      </div>
      <div class="col-md-2">
        <input type="email" name="email" class="form-control" placeholder="Email" required>
      </div>
      <div class="col-md-2">
        <input type="password" name="password" class="form-control" placeholder="Lozinka" required>
      </div>
      <div class="col-md-2">
        <input type="text" name="role" class="form-control" placeholder="Uloga" required>
      </div>
      <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Dodaj</button>
      </div>
    </form>

    <ul class="list-group">
      <% users.forEach(function(user) { %>
        <li class="list-group-item">
          <strong><%= user.first_name %> <%= user.last_name %></strong> (<%= user.email %>) - <%= user.role %>

          <form action="/users/delete/<%= user._id %>" method="POST" class="d-inline float-end ms-2">
            <button type="submit" class="btn btn-danger btn-sm">Obriši</button>
          </form>

          <form action="/users/update/<%= user._id %>" method="POST" class="row g-2 mt-2">
            <div class="col-md-2">
              <input type="text" name="first_name" value="<%= user.first_name %>" class="form-control form-control-sm" required>
            </div>
            <div class="col-md-2">
              <input type="text" name="last_name" value="<%= user.last_name %>" class="form-control form-control-sm" required>
            </div>
            <div class="col-md-2">
              <input type="email" name="email" value="<%= user.email %>" class="form-control form-control-sm" required>
            </div>
            <div class="col-md-2">
              <input type="text" name="password" value="<%= user.password %>" class="form-control form-control-sm" required>
            </div>
            <div class="col-md-2">
              <input type="text" name="role" value="<%= user.role %>" class="form-control form-control-sm" required>
            </div>
            <div class="col-md-2">
              <button type="submit" class="btn btn-success btn-sm w-100">Ažuriraj</button>
            </div>
          </form>
        </li>
      <% }) %>
    </ul>

    <a href="/" class="btn btn-secondary mt-4">Natrag</a>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
